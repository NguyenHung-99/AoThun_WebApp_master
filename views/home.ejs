        var config = {
            apiKey: "AIzaSyAOgkN3QMz8wu3dNZGZZicdnMtNRe86GwA",
            authDomain: "fir-25494.firebaseapp.com",
            projectId: "fir-25494",
            storageBucket: "fir-25494.appspot.com",
            messagingSenderId: "923809567266",
